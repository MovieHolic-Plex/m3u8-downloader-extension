{
  "manifest_version": 3,
  "name": "M3U8 Video Downloader",
  "version": "2.0.0",
  "description": "Download m3u8 streaming videos easily with multi-language support",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
